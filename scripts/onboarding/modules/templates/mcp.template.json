{
  "mcpServers": {
    "exa": {
      "command": "npx",
      "args": ["-y", "@exa/mcp-server"],
      "description": "AI-powered search (required)"
    },
    "perplexity": {
      "command": "npx",
      "args": ["-y", "@perplexity/mcp-server"],
      "description": "Research and reasoning (required)"
    },
    "gdrive": {
      "command": "npx",
      "args": ["-y", "@google/gdrive-mcp"],
      "description": "Google Sheets integration (required)"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@context7/mcp-server"],
      "description": "Library documentation (optional)"
    }{{#if has_alphavantage}},
    "financial-datasets": {
      "command": "npx",
      "args": ["-y", "@financial-datasets/mcp-server"],
